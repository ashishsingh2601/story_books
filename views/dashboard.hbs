<h3>Dashboard</h3>
<h4>Welcome, {{name}}!</h4>
<h6>Here are all your stories, enjoy!</h6>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
            <tbody>
                {{#each stories}}
                    <tr>
                        <td><a href="/stories/{{_id}}"></a>{{title}}</td>
                        <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                        <td><span class="dash-status">{{status}}</span></td>
                        <td></td>
                    </tr>
                {{/each}}
            </tbody>
    </table>

{{else}}
    <p>You haven't created any stories</p>
{{/if}}